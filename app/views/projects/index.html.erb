<h1>Projects</h1>
<a href="<%= "/organization/#{params[:id]}/projects/new" %>"><button type="button">Create new project</button></a>

<br>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Project</th>
      <th>Action</th>
    </tr>
  </thead><br>

  <% @projects.each do |project| %>
    <tr>
      <td><%= project.name %></td>
      <td>
        <a href="<%= project_path(project) %>"><button type="button">Show</button></a>
        <a href="<%= edit_project_path(project) %>"><button type="button">Edit</button></a>
        <a href="<%= delete_project_path(project) %>"><button type="button">Delete</button></a>
      </td>
    </tr><br>
  <% end %>
</table>
