<!-- Check for errors -->
<% if @project.errors.any? or @generate_project.errors.any? %>
  <p>The form contains <%= pluralize(@project.errors.count + @generate_project.errors.count, "error") %></p>

  <ul>
      <% @project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
      <% end %>
      <% @generate_project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
      <% end %>
  </ul>

<% end %>
