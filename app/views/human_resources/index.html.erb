<a href="<%= project_path(session[:project_id]) %>">Back</a>

<h1>Human Resources</h1>
<a href="<%= new_human_resource_path %>"><button type="button">Create new human resource</button></a>

<br>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Human resource</th>
      <th>Instances</th>
      <th>Action</th>
    </tr>
  </thead>

  <% @human_resources.each do |human_resource| %>
    <tr>
      <td><%= human_resource.name %></td>
      <td><%= human_resource.instances %></td>
      <td>
        <a href="<%= edit_human_resource_path(human_resource) %>"><button type="button">Edit</button></a>
        <a href="<%= delete_human_resource_path(human_resource) %>"><button type="button">Delete</button></a>
      </td>
    </tr><br>
  <% end %>
</table>
