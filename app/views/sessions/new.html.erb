<h1>Login</h1>
<%= form_with(url: "/login", method: "post", remote: true, class: "form-2") do |f| %>
  <%= f.label :username, "Username:" %>
  <%= f.text_field :username %>

  <%= f.label :password, "Password:" %>
  <%= f.password_field :password %>
  <br>
  <%= f.submit "Login" %>
<% end %>
<br>
<%= link_to "Don't have an account?", new_user_path, method: :get %>
