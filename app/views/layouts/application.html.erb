<!DOCTYPE html>
<html>
  <head>
    <title>SchedulingProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- Notifications -->
    <% flash.each do |type, msg| %>
      <div id="flash" class="text-center alert-info alert alert-<%= type %>">
          <%= msg%>
      </div>
    <% end %>
    <!-- END Notifications -->

    <%= yield %>
  </body>
</html>
