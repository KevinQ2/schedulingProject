<a href="<%= project_path(session[:project_id]) %>">Back</a>

<h1>Tasks</h1>
<a href="<%= new_task_resource_path %>"><button type="button">Create new task</button></a>

<br>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Task resource ID</th>
      <th>Task ID</th>
      <th>Human resource ID</th>
      <th>Duration</th>
      <th>Capacity</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @task_resources.each do |task_resource| %>
      <tr>
        <td><%= task_resource.id %></td>
        <td><%= task_resource.task_id %></td>
        <td><%= task_resource.human_resource_id %></td>
        <td><%= task_resource.duration %></td>
        <td><%= task_resource.capacity %></td>
        <td>
          <a href="<%= task_resource_path(task_resource) %>"><button type="button">Show</button></a>
          <a href="<%= edit_task_resource_path(task_resource) %>"><button type="button">Edit</button></a>
          <a href="<%= delete_task_resource_path(task_resource) %>"><button type="button">Delete</button></a>
        </td>
      </tr><br>
    <% end %>
  </tbody>
</table>
