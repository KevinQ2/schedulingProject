<a href="<%= user_path(@user.id) %>">Back</a>

<h1>Change password</h1>
<%= render "error_user" %>

<%= form_for(@user, method: "patch") do |f| %>
  Password: <%= f.text_field :password, label: "Password" %>
  <br>
  Confirm password: <%= f.text_field :password_confirmation, label: "Password confirmation" %>
  <br>
  <%= f.submit "Change password" %>
<% end %>
