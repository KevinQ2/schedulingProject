<a href="<%= "/organizations/#{params[:id]}" %>">Back</a>

<h1>Members</h1>

<br>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Username</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Telephone</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.telephone %></td>
        <td>
          <a href="<%= user_path(user) %>"><button type="button">Show</button></a>
          <a href="<%= delete_user_path(user) %>"><button type="button">Remove</button></a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
