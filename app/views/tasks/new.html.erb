<a href="<%= tasks_path %>">Back</a>

<h1>Create new task</h1>
<%= render "error_task" %>

<%= form_for(@task, method: 'post') do |f| %>
  Title: <%= f.text_field :title %>
  Description: <%= f.text_field :description %>
  Instances (Number of similar tasks): <%= f.text_field :instances %>

  <%= f.submit "Create Task" %>
<% end %>
