<a href="<%= "/project/#{@task.project_id}/tasks" %>">Back</a>

<h1>Create new task</h1>
<%= render "error_task" %>

<%= form_for(@task, url: new_task_path , :method => 'post') do |f| %>
  Title: <%= f.text_field :title %>
  Description: <%= f.text_field :description %>
  Average duration: <%= f.text_field :average_duration %>
  Instances (Number of similar tasks): <%= f.text_field :instances %>

  <%= f.submit "Create Task" %>
<% end %>
