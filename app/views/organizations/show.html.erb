<a href="<%= organizations_path %>">Back</a>

<h1>Organization: <%= @organization.name %></h1>
<a href="<%= organization_users_path %>"><button type="button">View members</button></a>
<a href="<%= new_project_path %>"><button type="button">Create new project</button></a>

<br><br>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Projects</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td>
          <a href="<%= project_path(project) %>"><button type="button">View</button></a>
          <a href="<%= edit_project_path(project) %>"><button type="button">Edit</button></a>
          <a href="<%= delete_project_path(project) %>"><button type="button">Delete</button></a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
